{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Plan",
  "type": "object",
  "properties": {
    "version": { "type": "string" },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["path", "action"],
        "properties": {
          "path": { "type": "string" },
          "action": { "type": "string", "enum": ["create", "update", "delete"] },
          "content": { "type": ["string", "null"] }
        }
      }
    },
    "metadata": { "type": "object" }
  },
  "required": ["version", "items"]
}